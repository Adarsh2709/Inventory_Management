{
  "version": 2,
  "builds": [
    {
      "src": "src/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "pythonVersion": "3.11"
      }
    },
    {
      "src": "templates/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/templates/static/$1" },
    { "src": "/(.*)", "dest": "/src/app.py" }
  ],
  "buildCommand": "pip install -r requirements.txt",
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "framework": null
}
